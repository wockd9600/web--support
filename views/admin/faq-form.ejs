<link rel='stylesheet' href='/stylesheets/board-style.css' />
<link rel='stylesheet' href='/stylesheets/board.css' />

<style>
    .form-box {
        padding: 20px;
        background-color: #fff;
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid #eff2f5;
        border-radius: .475rem;
        box-shadow: 0 0 20px 0 rgb(76 87 125 / 2%);
        box-sizing: border-box;
    }
</style>

<div class="contents-center mt-6 form-box">
    <form action="/board/write" method="post" class="mt-3 board-form">
        <div class="data-form">
            <div>
                <label for="exampleFormControlInput1" class="required form-label">질문</label>
                <input type="text" name="question" id="question" class="form-control form-control-solid" placeholder="질문" value="<% if(typeof(result) == 'object') { %><%= result.question %><% } %>">
            </div>
            <div>
                <label for="exampleFormControlInput1" class="required form-label">답변</label>
                <textarea class="form-control form-control-solid" name="answer" id="answer" placeholder="답변"><% if(typeof(result) == 'object') { %><%= result.answer %><% } %></textarea>
            </div>
            <div class="mt-3">
                <label for="exampleFormControlInput1" class="form-label">순서</label>
                <input type="number" name="order" id="order" class="form-control form-control-solid" placeholder="순서" value="<% if(typeof(result) == 'object') { %><%= result.show_order %><% } %>">
            </div>
        </div>
    </form>
    <div class="buttons mt-3 float-right">
        <button type="button" class="btn btn-light" onclick="location.href='/admin/faq'">취소</button>
        <% if(typeof(result) == 'object') { %>
            <button type="button" class="btn btn-primary" id="btn-faq-update">수정</button>
        <% } else { %>
            <button type="button" class="btn btn-primary" id="btn-add-answer">추가</button>
        <% } %>
    </div>
</div>
<script type="text/javascript" src="/javascripts/admin/faq.js"></script>