<script>
    function boardFilter(page, board) {
        const query = new URLSearchParams(location.search);
        const search = query.get('search')

        if (board == 'research') {
            location.href = `/research?page=${page}&search=${search}`;
        } else {
            location.href = `/commu/${board}?page=${page}&search=${search}`;
        }
    }
</script>
